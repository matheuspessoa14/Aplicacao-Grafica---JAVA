package br.senac.rj.banco.teste;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JFrame;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;
import javax.swing.WindowConstants;

import br.senac.rj.banco.janelas.JanelaEvento;
import br.senac.rj.banco.janelas.JanelaParticipante;

public class TesteSwing {

    public static void apresentarMenu() {
        JFrame janelaPrincipal = new JFrame("Gest√£o de Eventos");
        janelaPrincipal.setResizable(false);
        janelaPrincipal.setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
        janelaPrincipal.setSize(500, 350);

        JMenuBar menuBar = new JMenuBar();
        janelaPrincipal.setJMenuBar(menuBar);

        JMenu menuAtualizar = new JMenu("Atualizar");
        menuBar.add(menuAtualizar);

        JMenuItem menuEvento = new JMenuItem("Evento");
        JMenuItem menuParticipante = new JMenuItem("Participante");

        menuAtualizar.add(menuEvento);
        menuAtualizar.add(menuParticipante);

        JFrame janelaEvento = JanelaEvento.criarJanelaEvento();
        JFrame janelaParticipante = JanelaParticipante.criarJanelaParticipante();

        menuEvento.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                janelaEvento.setVisible(true);
            }
        });

        menuParticipante.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                janelaParticipante.setVisible(true);
            }
        });

        janelaPrincipal.setVisible(true);
    }

    public static void main(String[] args) {
        apresentarMenu();
    }
}
